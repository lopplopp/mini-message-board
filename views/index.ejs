<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>

    <% messages.forEach(message => { %>
      <p>User: <%=message.user%></p>
      <p>Text: <%=message.text%></p>
      <p>Added: <%=message.added%></p>
    <%})%>

    <form action="/" method="POST">
      <button>Enter new message</button>
    </form>
  </body>
</html>
